<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F33C7A"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Name"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/rollNoText"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/imageView3"
                app:layout_constraintTop_toBottomOf="@id/nameText"
                android:textStyle="bold"
                android:text="Roll No"
                android:textColor="#000"
                ></TextView>
            <TextView
                android:id="@+id/ageText"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/imageView3"
                app:layout_constraintTop_toBottomOf="@id/rollNoText"
                android:textStyle="bold"
                android:text="Age"
                android:textColor="#000"
                ></TextView>
            <TextView
                android:id="@+id/stdName"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/nameText"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:textColor="#000"
                ></TextView>
            <TextView
                android:id="@+id/stdRollNo"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/rollNoText"
                app:layout_constraintTop_toBottomOf="@id/stdName"
                android:textStyle="bold"
                android:textColor="#000"
                ></TextView>
            <TextView
                android:id="@+id/stdAge"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/ageText"
                app:layout_constraintTop_toBottomOf="@id/stdRollNo"
                android:textStyle="bold"
                android:textColor="#000"
                ></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>